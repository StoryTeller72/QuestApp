<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NameActivity">

    <ImageView
        android:id="@+id/backGround_imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/start_end_background_1_2_3_14"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/cat_imageView"
        android:layout_width="248dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/cat_welcome_bacground_2_3"
        android:scaleType="centerCrop"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_button_nameActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/blue_dark"
        android:layout_marginBottom="57dp"
        android:text="Подтвердить"/>

    <EditText
        android:id="@+id/inputName_editText_nameActivity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/confirm_button_nameActivity"
        android:background="#DCDCDC"
        android:textStyle="italic"
        android:hint="Введите свое имя.."
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/questionTextView_activityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/inputName_editText_nameActivity"
        android:layout_marginBottom="48dp"
        android:text="Привет, меня зовут Кирюша. А тебя?"/>

</androidx.constraintlayout.widget.ConstraintLayout>